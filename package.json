{
  "name": "@moxy/react-split-text",
  "version": "1.0.1",
  "description": "A react component that wraps each word of a sentence into a <span> element.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "lib",
    "es",
    "dist"
  ],
  "homepage": "https://github.com/moxystudio/react-split-text#readme",
  "author": "Diogo Silva <fsdiogo@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "split",
    "text"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moxystudio/react-split-text.git"
  },
  "bugs": {
    "url": "https://github.com/moxystudio/react-split-text/issues"
  },
  "scripts": {
    "build:css": "rimraf dist && postcss src/styles/**/*.css --base src/styles --dir dist",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d lib --delete-dir-on-start",
    "build:es": "cross-env BABEL_ENV=es babel src -d es --delete-dir-on-start",
    "build": "npm run build:commonjs && npm run build:es && npm run build:css",
    "test": "jest",
    "lint": "eslint --ignore-path .gitignore .",
    "prerelease": "npm t && npm run lint && npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin HEAD && npm publish"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@commitlint/config-conventional": "^8.0.0",
    "@moxy/babel-preset": "^3.2.1",
    "@moxy/eslint-config-babel": "^12.0.0",
    "@moxy/eslint-config-base": "^12.0.0",
    "@moxy/eslint-config-jest": "^12.0.0",
    "@moxy/eslint-config-react": "^12.0.0",
    "@moxy/jest-config": "^4.0.1",
    "@moxy/postcss-preset": "^4.4.2",
    "@testing-library/react": "^10.0.2",
    "commitlint": "^8.3.5",
    "cross-env": "^7.0.2",
    "eslint": "^6.0.0",
    "husky": "^4.0.10",
    "jest": "^25.2.6",
    "lint-staged": "^10.0.2",
    "postcss-cli": "^7.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.1"
  }
}
